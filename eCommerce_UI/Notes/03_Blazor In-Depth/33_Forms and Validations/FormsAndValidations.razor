@page "/FormsAndValidations"

<h3>Forms and Validations </h3>
<br />

<EditForm Model="person" OnValidSubmit="ValidFromSubmitted">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="card col-6 p-3">
        <div class="form-group">
            <label class="font-weight-bold">Full Name:<br /></label>
            <InputText class="form-control" @bind-Value="person.FullName" />
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Employeer Number: <br /></label>
            <InputNumber class="form-control" @bind-Value="person.EmployeeNumber" />
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Email:<br /></label>
            <InputText class="form-control" @bind-Value="person.Email" />
        </div>
        <input type="submit" class="btn btn-outline-primary col-3" value="Submit" />
    </div>
        
</EditForm>

