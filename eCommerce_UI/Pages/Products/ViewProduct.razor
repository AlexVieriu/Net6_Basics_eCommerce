@page "/product/{id:int}"

@inject IViewProduct _viewProduct

<h3>Product Details</h3>
<br />

<div class="card col-4">
    <div class="card-body">
        <img src="@($"{Product.ImageLink}")"/>
        <h5 class="card-title">@Product.Name</h5>
        <h6 class="card-subtitle m-2 text-muted">@Product.Brand</h6>
        
        <hr />

        <p>Price: <label style="color:darkred">@Product.Price.ToString("c")</label></p>
        <br />
        <p class="card-text">@Product.Description</p>
    </div>
</div>

<br />

<a href="/products" class="btn btn-outline-secondary" >Back to Products</a>


@code{
    [Parameter]
    public int Id { get; set; }

    public Product Product { get; set; }

    protected override void OnParametersSet()
    {
        Product = _viewProduct.Execute(Id);
    }
}